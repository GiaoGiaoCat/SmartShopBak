%section.vbox
  %section.scrollable.padder
    = render_breadcrumb

    %section.panel.panel-default
      %header.panel-heading.font-bold Listing Shops
      .table-responsive
        %table.table.table-striped.b-t.b-light.text-sm
          %thead
            %tr
              %th Name
              %th Owner
              %th Created at
              %th.col-lg-action

          %tbody
            - @shops.each do |shop|
              %tr
                %td= link_to shop.name, admin_shop_path(shop)
                %td= ''
                %td= shop.created_at
                %td.col-lg-action
                  = link_to admin_shop_path(shop), class: 'btn btn-default btn-xs' do
                    %i.fa.fa-file-text.text-muted
                    Show
                  = link_to edit_admin_shop_path(shop), class: 'btn btn-default btn-xs' do
                    %i.fa.fa-pencil.text-muted
                    Edit

      %footer.panel-footer
        .row
          .col-sm-4.hidden-xs
            = link_to 'New Shop', new_admin_shop_path, class: 'btn btn-s-md btn-info btn-rounded'
          .col-sm-4.text-center
            %small.text-muted.inline.m-t-sm.m-b-sm showing 20-30 of 50 items
          .col-sm-4.text-right.text-center-xs
            = paginate @shops
