%section.vbox
  %section.scrollable.padder
    = render_breadcrumb

    %section.panel.panel-default
      %header.panel-heading.font-bold Listing addresses
      .table-responsive
        %table.table.table-striped.b-t.b-light.text-sm
          %thead
            %tr
              %th Name
              %th Phone
              %th Address
              %th.col-lg-action

          %tbody
            - @addresses.each do |address|
              %tr
                %td= address.name
                %td= address.phone
                %td
                  = address.province
                  = address.city
                  = address.district
                  = address.address
                %td.col-lg-action
                  = link_to admin_address_path(address), class: 'btn btn-default btn-xs' do
                    %i.fa.fa-file-text.text-muted
                    Show
                  = link_to edit_admin_address_path(address), class: 'btn btn-default btn-xs' do
                    %i.fa.fa-pencil.text-muted
                    Edit
                  = link_to admin_address_path(address), method: :delete, class: 'btn btn-danger btn-xs', :data => { confirm: 'Are you sure?', dismiss: 'alert' } do
                    %i.fa.fa-trash-o
                    Remove


      %footer.panel-footer
        .row
          .col-sm-4.hidden-xs
            = link_to 'New Address', new_admin_address_path, class: 'btn btn-s-md btn-info btn-rounded'
          .col-sm-4.text-center
            %small.text-muted.inline.m-t-sm.m-b-sm showing 20-30 of 50 items
          .col-sm-4.text-right.text-center-xs
            = paginate @addresses
