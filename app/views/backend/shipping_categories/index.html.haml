%section.vbox
  %section.scrollable.padder
    = render_breadcrumb

    %section.panel.panel-default
      %header.panel-heading.font-bold Listing shipping categories
      .table-responsive
        %table.table.table-striped.b-t.b-light.text-sm
          %thead
            %tr
              %th Name
              %th.col-lg-action

          %tbody
            - @shipping_categories.each do |shipping_category|
              %tr
                %td= shipping_category.name
                %td.col-lg-action
                  = link_to admin_shipping_category_path(shipping_category), class: 'btn btn-default btn-xs' do
                    %i.fa.fa-file-text.text-muted
                    Show
                  = link_to edit_admin_shipping_category_path(shipping_category), class: 'btn btn-default btn-xs' do
                    %i.fa.fa-pencil.text-muted
                    Edit
                  = link_to admin_shipping_category_path(shipping_category), method: :delete, class: 'btn btn-danger btn-xs', :data => { confirm: 'Are you sure?', dismiss: 'alert' } do
                    %i.fa.fa-trash-o
                    Remove


      %footer.panel-footer
        .row
          .col-sm-4.hidden-xs
            = link_to 'New Shipping category', new_admin_shipping_category_path, class: 'btn btn-s-md btn-info btn-rounded'
          .col-sm-4.text-center
            %small.text-muted.inline.m-t-sm.m-b-sm showing 20-30 of 50 items
          .col-sm-4.text-right.text-center-xs
            = paginate @shipping_categories
